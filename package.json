{
  "name": "markdown-editor",
  "version": "1.0.0",
  "description": "A clean, minimal markdown editor built with Electron",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:renderer": "vite build",
    "build:main": "tsc -p tsconfig.electron.json",
    "build:preload": "tsc -p tsconfig.preload.json && mv dist-electron/preload.js dist-electron/preload.cjs",
    "build:electron": "npm run build:main && npm run build:preload",
    "build": "tsc -p tsconfig.json && npm run build:electron && npm run build:renderer",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"npm run build:preload\" \"tsc -p tsconfig.electron.json --watch --preserveWatchOutput\" \"wait-on http://localhost:5173 dist-electron/main.js dist-electron/preload.cjs && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@codemirror/view": "^6.23.0",
    "@codemirror/state": "^6.4.0",
    "@codemirror/commands": "^6.3.3",
    "@codemirror/lang-markdown": "^6.2.4",
    "@codemirror/language": "^6.10.0",
    "@codemirror/theme-one-dark": "^6.1.2",
    "dompurify": "^3.0.8",
    "markdown-it": "^14.1.0",
    "markdown-it-task-lists": "^2.1.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/dompurify": "^3.0.5",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20.11.10",
    "@vitejs/plugin-react": "^4.2.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.example.markdown-editor",
    "productName": "Markdown Editor",
    "files": [
      "dist/**",
      "dist-electron/**",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Office"
    }
  }
}
